#include <iostream>
#include <math.h>
#include <conio.h>

using namespace std;
main()
{
   string nome;
   float peso, altura, imc, peso_ideal;
   
   cout << "Digite seu nome: ";
   cin  >> nome;
   cout << "Digite o peso: ";
   cin  >> peso;
   cout << "Digite a altura: ";
   cin  >> altura;
   
   imc = peso / pow(altura,2);
   peso_ideal = 22 * pow(altura,2);
   
   cout << "IMC calculado = " << imc << endl;
   cout << "Peso Ideal = " << peso_ideal << endl;

   getch();
   
}

